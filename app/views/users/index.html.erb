<div class="row">
	<div class="col-xs-3">

		<h2>User info</h2>
		<%= render 'users/profile', user: current_user %>
		<!--userはログインしているユーザーのIDであるcurrent_userを代入 -->

		<h2>New book</h2>
		<%= render 'books/newform', book: @book %>

	</div>

	<div class="col-xs-9">

		<h2>Users</h2>
		<!--users一覧 -->
		<table class="table">
			<thead>
				<tr>
					<th>image</th>
					<th>name</th>
					<th colspan="3"></th>
					<!-- 連結するセルの数を指定無くてもあんまり変わらなかった。 -->
				</tr>
			</thead>

			<tbody>
				<% @users.each do |user| %>
				<%# @users = User.allから来ている　Userテーブルの1つ1つのデータをeachで繰り返し処理を行い、新しい変数userに代入していっている %>
				<tr>
					<td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>
					<td><%= user.name%></td>
					<td><%= link_to "Show", user, class: "user_#{user.id}" %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
		<!--users一覧 -->

	</div>
</div>
